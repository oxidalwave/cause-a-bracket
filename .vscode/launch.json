    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dev:web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev:web"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "dev:ws",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev:ws"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start:web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "pnpm: build:web",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:web"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start:ws",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "pnpm: build:ws",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start:ws"
            ]
        }
    ]
}