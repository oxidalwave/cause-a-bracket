    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "dev",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "start",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "pnpm: build",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "start"
            ]
        }
    ]
}