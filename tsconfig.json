{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app.config.ts",
    "vite.config.ts",
    ".storybook/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".output",
    ".output",
    ".tanstack"
  ],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  }
}